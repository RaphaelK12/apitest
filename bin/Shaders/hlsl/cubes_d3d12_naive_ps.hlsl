// Constant Buffers ---------------------------------------------------------------------------------------------------

// Textures / Samplers ------------------------------------------------------------------------------------------------

// Input --------------------------------------------------------------------------------------------------------------
struct PsInput
{ 
    float4 f4Position   : SV_Position;
    float3 f3Color      : Color;
};

// Output -------------------------------------------------------------------------------------------------------------
struct PsOutput
{
    float4 f4Color : SV_Target0;
};

// Functions ----------------------------------------------------------------------------------------------------------
PsOutput psMain(PsInput I)
{
    PsOutput O = (PsOutput)0;
    O.f4Color = float4(I.f3Color, 1);
    return O;
}
